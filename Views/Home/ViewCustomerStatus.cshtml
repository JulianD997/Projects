@model IEnumerable<CustomerStatus>
@{
    ViewData["Title"] = "List";
}

<h1>Customer Status</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">SSN ID</th>
            <th scope="col">Status</th>
            <th scope="col">Message</th>
            <th scope="col">Last Updated</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var info in Model)
        {
            <tr>
                <td>@info.Ssnid</td>
                <td>@info.Status</td>
                <td>@info.Message</td>
                <td>@info.LastUpdated</td>
                <td><a asp-controller="Bank" asp-action="ViewCustomerStatus" asp-route-id="@info.Ssnid">Refresh</a></td>
            </tr>
        }
    </tbody>
</table>