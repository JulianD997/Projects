@model IEnumerable<UserInfo>

@{ 
    ViewData["Title"] = "List";
} 

<h1>Customer Info</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">SSN ID</th>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col">Age</th>
            <th scope="col">Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var info in Model)
        {
            <tr>
                <td>@info.Ssnid</td>
                <td>@info.Name</td>
                <td>@info.Address</td>
                <td>@info.Age</td>
                <td class="text-center btn-group">
                    <a class="btn btn-secondary" asp-controller="CustStatusBank" asp-action="UpdateCust" asp-route-id="@info.CustomerId">Update Customer</a>
                    <a class="btn btn-danger" asp-controller="CustStatusBank" asp-action="DeleteCust" asp-route-id="@info.CustomerId">Delete Customer</a>
                </td>
            </tr>
        }
    </tbody>
</table>