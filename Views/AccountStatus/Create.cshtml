@model TCSBanking.ViewModels.AccountCreateViewModel

<html>
<head>
    <style>
        body {
            background-image: url("https://www.fintecture.com/wp-content/themes/fintecture/img/Bank_8fps.gif");
            background-repeat: no-repeat;
            background-position: right bottom;
        }
    </style>
</head>
<body>

    <h1>Add Account</h1>

    <form asp-controller="AccountStatus" asp-action="Create" method="post">

        <div class="form-group">
            <label asp-for="@Model.CustomerId">Customer Id</label>
            <input asp-for="@Model.CustomerId" class="form-control" placeholder="Customer Id...">
            <span asp-validation-for="@Model.CustomerId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.AccountType">Account Type</label>
            <select asp-for="@Model.AccountType" class="browser-default custom-select">
                <option value="Savings" selected>Savings</option>
                <option value="Current">Current</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="@Model.DepositAmount">Deposit Amount</label>
            <input asp-for="@Model.DepositAmount" class="form-control" placeholder="Deposit Amount...">
            <span asp-validation-for="@Model.DepositAmount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-md btn-block">Create</button>
        </div>
    </form>
</body>
</html>